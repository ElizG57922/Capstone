<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.storyapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoryApp">
        <activity
            android:name=".authors.ViewSearchedAuthorsActivity"
            android:exported="true" />
        <activity
            android:name=".stories.ViewSearchedStoriesActivity"
            android:exported="true" />
        <activity
            android:name=".stories.ViewPopularStoriesActivity"
            android:exported="true" />
        <activity
            android:name=".stories.ViewLikedStoriesActivity"
            android:exported="true" />
        <activity
            android:name=".reviews.ReviewActivity"
            android:exported="true" />
        <activity
            android:name=".ViewStoryActivity"
            android:exported="true" />
        <activity
            android:name=".ViewProfileActivity"
            android:exported="true" />
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".UploadFileActivity"
            android:exported="true" />
        <activity
            android:name=".authors.ViewAuthorsActivity"
            android:exported="true" />
        <activity
            android:name=".stories.ViewStoriesActivity"
            android:exported="true" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="true" />
        <activity
            android:name=".RegistrationActivity"
            android:exported="true" />
        <activity
            android:name=".StartingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>
