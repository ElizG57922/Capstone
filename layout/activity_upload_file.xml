<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.storyapp.UploadFileActivity">
    <RadioGroup
        android:id="@+id/typegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/typePDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDF" />

        <RadioButton
            android:id="@+id/typeTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="TXT" />
    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typegroup"
        android:id="@+id/desc"
        android:background="@null"
        android:hint="Description"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/fileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name your uploaded file" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload File" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Select the Upload File button
        \n2. Name your file and add a description
        \n3. Select the Upload File button again to upload the file"/>
</LinearLayout>